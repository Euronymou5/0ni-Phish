	self.getLocaleCountry = function (localeCode) {
		if (localeCode) {
			localeCodeArray = localeCode.split("_");
			if (localeCodeArray.length > 1) {
				return localeCodeArray[1];
			}
		}
		return "US";
	};

	self.doProfilePath = function () {
