	self.verifyAccountLinked = function (accountName) {
		var hasAccount = false;
		
		if(self && self.user && self.user.identities.length > 0) {
			$.each(self.user.identities, function () {
				if (this.provider == accountName && this.authorized == true)
					hasAccount = true;
			});
		}
		
		return hasAccount;
	};

