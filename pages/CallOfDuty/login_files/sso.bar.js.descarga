	// Determine the locale of this page
	self.getLocale = function () {
		SSO.utility.log("*** SSO.Bar.getLocale() ***");
		var locale;

		locale = siteConfig.locale || SSO.utility.getCookie('ACT_SSO_LOCALE') || 'en_US';
		
		SSO.utility.log("**** Locale is: " + locale);
		return locale;
